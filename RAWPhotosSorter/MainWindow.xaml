<Window x:Class="RAWPhotosSorter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RAWPhotosSorter"
        mc:Ignorable="d"
        Background="Black" Icon="/Icons/ImportImage_16x16.png"
        Title="RAWPhotosSorter" Height="900" Width="1600" WindowStartupLocation="CenterScreen"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        KeyDown="Window_KeyDown" Closing="Window_Closing">
    <Grid>
        <Image Name="PhotoControl" Source="{Binding SelectedPhoto.Source}"/>
    </Grid>
</Window>
